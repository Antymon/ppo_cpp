Bootstrap: library
From: airl_lab/default/airl_env:tensorflow


%labels
    Author szymon.brych@gmail.com
    Version v0.0.1

%files
    ./resources/setup.sh /git/sferes2
    	
%post
   export LD_LIBRARY_PATH="/workspace/lib:$LD_LIBRARY_PATH"

   #install_utilities

   apt-get update && apt-get install -y \
   nano \
   gdb \
   valgrind \
   htop

   #====================================================================================================
   exit 0 #NOTFORFINAL - the lines below this "exit" will be executed only when building the final image
   #====================================================================================================
   cd /git/sferes2/exp/
   git clone https://gitlab.doc.ic.ac.uk/sb5817/ppo_cpp.git
   cd ../
   ./setup.sh

%runscript
    JOB_ID=$7

    CURPATH=$(pwd)

    RESULTS_PATH=$CURPATH/results/$JOB_ID

    mkdir -p $RESULTS_PATH

    cd /git/sferes2/

    TIMESTAMP=$(date +%Y-%m-%d_%H_%M_%S)_$$

    # running the experiment (the -d option allows to define the directory where the results should be stored
    build/exp/ppo_cpp/ppo_cpp -d $RESULTS_PATH --graph_path $CURPATH/$1 --steps $2 --lr $3 --ent $4 --cr $5 --num_saves $6 >> $RESULTS_PATH/${TIMESTAMP}_output_log.txt
    

%help
    This is the development and running environment of the cpp port of PPO.
    Usage: singularity run CONTAINER_NAME graph_path steps lr ent cr num_saves